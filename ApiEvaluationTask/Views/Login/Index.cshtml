@model ApiEvaluationTask.ViewModels.UserLoginViewModel
@{
    ViewBag.Title = "Index";
}
<link href="~/Content/custom/login.css" rel="stylesheet" />

<div class="login-form">
    @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { @class = "form", role = "form" }))
    {
        <h2 class="text-center">Log in</h2>
        @Html.AntiForgeryToken()

        <div class="form-group">

            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email" })
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">

            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })

        </div>
        <div class="form-group">
            <input type="submit" value="Log in" class="btn btn-primary btn-block" />

        </div>
        <div class="clearfix">
            <label class="pull-left checkbox-inline"><input type="checkbox"> Remember me</label>

        </div>
        <div class="clearfix">
            @Html.ValidationMessage("loginerror", new { @class = "error-message" })

        </div>
    }

</div>

